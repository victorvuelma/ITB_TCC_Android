<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBookingsRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtBookingRowDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorSecondary"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtBookingRowPeople"
        app:layout_constraintStart_toEndOf="@+id/txtBookingRowStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBookingRowPeople"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtBookingRowDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBookingRowInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBookingRowDate" />

    <TextView
        android:id="@+id/txtBookingRowStatus"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtBookingRowDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>